
ADDITION OF 2 3X3 MATRICES
#include<stdio.h>
int main()
{
    int a[3][3]=
    {  {1,0,1}, 
       {1,1,1},
       {0,0,0}
    };
    int b[3][3]=
    {
       {1,0,1}, 
       {1,1,1},
       {0,0,0}
    };
    int c[3][3];
    //ADDING THE TWO MATRICES
    for(int i=0 ; i<3 ; i++ )
    {
        for(int j=0 ; j<3 ; j++)
        {
            c[i][j] = a[i][j] + b[i][j];
            
        }
    }
    for(int i=0 ; i<3 ; i++ )
    {
        for(int j=0 ; j<3 ; j++)
        {
            printf("%d \t",c[i][j]);
            
        }
        printf("\n");
    }
}
*****************************************************************************************************
ADDITION OF 2 3D MATRICES
